<tr>
  <td>
    <%= badge_counter + 1 %>
  </td>
  <td>
    <%= badge.name %>
  </td>
  <td>
    <%= octicon badge.image, style: "color: #{badge.color};" %>
  </td>
  <td>
    <%= 
      badge.rules.map do |rule| 
        rule.content.join(' ')
      end.join("<br/>AND</br>").html_safe 
    %>
  </td>
  <td>
    <%= link_to "Edit", edit_admin_badge_path(badge)  %>
  </td>
</tr>
