<%= content_tag :h2, "Test: #{@question.test.title}" %>
<%= content_tag :p, "Qestion: #{@question.body}" %>
<%= form_for @answer do |f| %>
  <%= hidden_field_tag :question_id, @answer.question_id %><br/>
  Body: <%= f.text_field :body %><br/>
  Is correct: <%= f.check_box :correct %>
  <br/>
  <%= f.submit %>
<% end %>