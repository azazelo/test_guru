<%= content_tag :h1, "Questions for Test ID:#{@test.id}. #{@test.title}:" %>
<%= link_to "Create new question", new_test_question_path(test_id: @test.id) %>
<br/><br/>
<% @questions.each.with_index(1) do |q, i| %>
  <%= [i, q.body].join(". ") %>
  <%= button_to "Delete", test_question_path(test_id: @test.id, id: q), method: :delete, data: {confirm: "Вы уверены?"} %>
  <br/>
<% end %>
