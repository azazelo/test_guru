<tr>
  <td>
    <%= question_counter + 1 %>
  </td>
  <td>
    <%= question.body %>
  </td>
  <td>
    <%= question.answers.size %>
  </td>
  <td>
    <%= link_to 'Edit', edit_question_path(question) %>
  </td>
  <td>
    <%= button_to "Delete", question_path(test_id: @test.id, id: question.id), method: :delete, data: {confirm: "Вы уверены?"} %>
  </td>
</tr>
