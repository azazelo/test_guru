<%= form_with model: @user, local: true, autofill: false do |form| %>
  <%= render 'shared/errors', resource: @user %>

  <p class="field">
    <%= form.label :first_name %><br/>
    <%= form.text_field :first_name, id: :user_first_name %>
  </p>

  <p class="field">
    <%= form.label :last_name %><br/>
    <%= form.text_field :last_name, id: :user_last_name %>
  </p>

  <p class="field">
    <%= form.label :login %><br/>
    <%= form.text_field :login, id: :user_login %>
  </p>

  <p class="field">
    <%= form.label :email %><br/>
    <%= form.text_field :email, id: :user_email %>
  </p>
  
  <p class="field">
    <%= form.label :password %><br/>
    <%= form.password_field :password, id: :user_password %>
  </p>

  <p class="field">
    <%= form.label :password_confirmation %><br/>
    <%= form.password_field :password_confirmation, id: :user_password_confirmation %>
  </p>

  <p class="actions">
    <%= form.submit %>
  </p>
<% end %>
